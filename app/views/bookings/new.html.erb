<h1>Confirm Booking</h1>

<%= form_for @booking do |f| %>

	<%= f.hidden_field :flight_id, value: @booking.flight_id %>
	
	<p>Flight Information:
		<%= render 'flight_info' %>
	</P>
	<p>Passengers: <%= @booking.passengers.size %></p>
	<ul>
		<%= f.fields_for :passengers do |passenger| %>
			<li>
			<%= passenger.label :name %>
			<%= passenger.text_field :name, class: 'form-control' %>
			<%= passenger.label :age %>
			<%= passenger.text_field :age, class: 'form-control' %>
			</li>
		<% end %>
	</ul>

	<%= f.submit 'Book Flight', class: 'btn btn-primary' %>
<% end %>